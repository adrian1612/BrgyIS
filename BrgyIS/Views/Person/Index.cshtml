@using BrgyIS.Models
@{
    ViewBag.Title = "Person";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <div class="card-title">@ViewBag.Title</div>
        <div class="row row-cols-lg-auto g-1 align-items-center mt-3">
            <div class="col" aria-action="Add">
                <p>
                    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })
                </p>
            </div>
        </div>
        <table id="data" class="table table-light table-hover table-striped" style="font-size:0.9rem;with:100%;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First name</th>
                    <th>Middle name</th>
                    <th>Last name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Civil Status</th>
                    <th>Shelter Type</th>
                    <th>Occupation</th>
                    <th>PWD</th>
                    <th>Relationship</th>
                    <th>St. No</th>
                    <th>Address</th>
                    <th>Remarks</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>First name</th>
                    <th>Middle name</th>
                    <th>Last name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Civil Status</th>
                    <th>Shelter Type</th>
                    <th>Occupation</th>
                    <th>PWD</th>
                    <th>Relationship</th>
                    <th>St. No</th>
                    <th>Address</th>
                    <th>Remarks</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section scripts {
    <script>
        function Model() {
            var self = this;

            self.table = $('#data').DataTable({
                responsive: true,
                layout: {
                    top: {
                        buttons: [
							{
							    extend: 'print',
							    exportOptions: {
							        columns: ':visible'
							    }
							},
							{
							    extend: 'excel',
							    exportOptions: {
							        columns: ':visible'
							    }
							},
							{
							    extend: 'colvis',
							    exportOptions: {
							        columns: ':visible'
							    }
							}
                        ]
                    }
                },
                ajax: { url: '@Url.Action("List", "Person", new { area = ""})', dataSrc: '' },
                columns: [
				{ data: 'ID' }, { data: 'fname' }, { data: 'mn' }, { data: 'lname' }, { data: 'bday', render: (data) => { return moment(data).format('MMM DD, yyyy'); } }, { data: 'gender' }, { data: 'CivilStatus' }, { data: 'ShelterType' }, { data: 'Occupation' }, { data: 'isPWD' }, { data: 'RelationshipToHead' }, { data: 'StNo' }, { data: 'Address' }, { data: 'Remarks' },
				{
				    data: 'ID',
				    render: (data) => {
				        return `<a href='@Url.Action("Edit", "Person", new { area = ""})?ID=${data}'><i class="fa fa-edit"></i></a>`;
				    }
				}],
                ordering: false,
                searching: true,
                stateSave: true
            });
        }

        ko.applyBindings(new Model());
    </script>
}